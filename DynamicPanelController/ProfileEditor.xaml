<Window x:Class="DynamicPanelController.ProfileEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicPanelController"
        mc:Ignorable="d"
        Title="ProfileEditor" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="PanelProfileNameTextBlock" Grid.Row="0" Grid.Column="1" FontSize="25" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5" HorizontalContentAlignment="Center"/>

        <Button x:Name="PanelDescriptorButton" Content="Panel Descriptor: Global" Grid.Column="2" Margin="5" Click="PanelDescriptorButtonClicked"/>

        <ListBox x:Name="IOSelectorList" SelectionMode="Single" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Margin="5" SelectionChanged="IOSelected"/>
        <ListBox x:Name="PanelItemSelectorList" SelectionMode="Single" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5" SelectionChanged="PanelItemSelected"/>
        <ListBox x:Name="OptionsSelectorList" SelectionMode="Single" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" Margin="5"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Button x:Name="PushedButton" Content="Released" Margin="5" IsEnabled="False" />
            <Button x:Name="ReleasedButton" Grid.Column="1" Content="Pushed" Margin="5" IsEnabled="False"/>
        </Grid>
        
        <Grid Grid.Row="2" Grid.Column="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <Button x:Name="FinishButtonOK" Grid.Column="0" Content="OK" Margin="0, 5, 0, 5" Click="OKClicked"/>
            <Button x:Name="FinishButtonCancel" Grid.Column="1" Content="Cancel" Margin="5" Click="CancelClicked"/>
            <Button x:Name="FinishButtonApply" Grid.Column="2" Content="Apply" Margin="0, 5, 0, 5" Click="ApplyClicked"/>
        </Grid>

    </Grid>
</Window>
