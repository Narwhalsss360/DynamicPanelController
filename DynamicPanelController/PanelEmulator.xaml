<Window x:Class="DynamicPanelController.PanelEmulator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicPanelController"
        mc:Ignorable="d"
        Title="PanelEmulator" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="ButtonStack" Margin="5">
        </StackPanel>

        <StackPanel x:Name="AbsoluteStack" Grid.Column="1" Margin="5">
        </StackPanel>

        <StackPanel x:Name="DisplayStack" Grid.Column="2" Margin="5">
        </StackPanel>
    </Grid>
</Window>
